{{!--<h2>All events</h2>--}}

{{!--            DON'T DELETE             --}}

{{#if data.user}}
<button id="create"><a href='/events/create'>Create event</a></button>
{{/if}}

<div class="allEvents">
  {{!-- {{#each event}} --}}
  {{#each data.eventData}}
  {{!-- <div class="container"> --}}
    <article id="list">
      <p>{{this.name}}</p>
      <p>{{this.description}}</p>
      <p>{{this.location}}</p>
      <p>{{this.activity}}</p>
      <p><img href="{{this.image}}" /></p>
    </article>
    {{!--
  </div> --}}
  {{/each}}
</div>